# frontend/Dockerfile
# build stage
FROM node:18-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build

# production stage
FROM nginx:stable-alpine
COPY --from=build /app/build /usr/share/nginx/html
# optionally copy custom nginx.conf if needed
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
